{
  "expo": {
    "name": "bSteem",
    "description": "The best mobile app on the steem blockchain",
    "slug": "bsteem",
    "privacy": "public",
    "sdkVersion": "23.0.0",
    "version": "1.0.4",
    "orientation": "portrait",
    "primaryColor": "#ffffff",
    "icon": "./assets/bsteem-logo-splash.png",
    "splash": {
      "image": "./assets/bsteem-logo-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "scheme": "bsteem",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription":
          "This app uses the photo library so that users can upload images when they create a post"
      },
      "bundleIdentifier": "com.bsteem.bsteemapp"
    },
    "android": {
      "package": "com.bsteem.bsteemapp",
      "versionCode": 6,
      "permissions": ["READ_PHONE_STATE", "READ_CONTACTS", "CAMERA", "RECORD_AUDIO"]
    }
  }
}
